<html>
  <head>
    <title>KidsMama</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if kid_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_kid_session_path, method: :delete %>
      </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
