<% if flash[:alert].present? %>
  <div class="alert alert-info">
    <span class="glyphicon glyphicon-info-sign"></span>
    <%= flash[:alert] %>
  </div>
<% end %>
<div class="container">
  <h2>ママの部屋(ログイン)</h2>
  <div class="col-8">
    <%= form_with model: @admin, url: new_admin_session_path, local: true do |f| %>
    <table>
      <tbody>
        <tr>
          <td>なまえ</td>
          <td>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </td>
        </tr>
        <tr>
          <td>ぱすわーど</td>
          <td>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "部屋に入る", class: "btn btn-success" %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
    <div class="col-8">
      <h4>ママの部屋をつくっていない人はこちら</h4>
      <%= link_to new_admin_registration_path do %>
        <button class="btn btn-success">部屋をつくる！</button>
      <% end %>
    </div>
  </div>
</div>