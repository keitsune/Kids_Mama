<div class="container">
  <h2>ママの部屋をつくる！</h2>
  <div class="col-8 d-flex justify-content-center">
    <%= form_with model: @admin, url: admin_registration_path, local: true do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>
      <table>
        <tbody>
          <tr>
            <td class="pr-5 pb-5">なまえ</td>
            <td>
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </td>
          </tr>
          <tr>
            <td class="pr-5 pb-5">めーるあどれす</td>
            <td>
              <%=f.text_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td class="pr-5 pb-5">
              ぱすわーど
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </td>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <tr>
              <td class="pr-5 pb-5">ぱすわーど(もう一度)</td>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
            </tr>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "部屋をつくる！", class: "btn btn-success w-100" %>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>